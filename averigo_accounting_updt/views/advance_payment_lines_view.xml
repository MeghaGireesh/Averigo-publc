<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_advance_payment_lines_tree" model="ir.ui.view">
        <field name="name">advance.payment.lines.tree.credit</field>
        <field name="model">advance.payment.lines</field>
        <field eval="1" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Advance Payment Items" create="false" multi_edit="1">
                <field name="advance_id" invisible="1"/>
                <field name="company_id" groups="base.group_multi_company"
                       options="{'no_create': True}" optional="show"/>
                <field name="move_name" string="Reference#"/>
                <field name="partner_id" optional="show" readonly="1"
                       string="Customer"/>
                <field name="type" string="Type"/>
                <field name="total_amount" sum="Total Debit" readonly="1"
                       string="Total Amount" width="30px"/>
                <field name="applied_amount" sum="Used Credit"
                       string="Applied Amount" readonly="1" width="30px"/>
                <field name="balance_amount" sum="Balance Advance"
                       string="Balance Amount" readonly="1" width="30px"/>
                <field name="applied_amount_new" sum="Applied Advance"
                       string="Apply New Amount" width="30px"/>

            </tree>
        </field>
    </record>

    <record id="add_multi_advance_wizard" model="ir.ui.view">
        <field name="name">advance.payment.wizard</field>
        <field name="model">advance.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="receipt_id" invisible="1"/>
                        <field name="receipt_line_id" invisible="1"/>
                        <field name="is_receipt_lines" invisible="1"/>

                    </group>
                    <div class="alert alert-danger " role="alert"
                         attrs="{'invisible':[('is_receipt_lines','=',False)]}">
                        <span>
                            There is no active advances.
                        </span>
                    </div>
                    <field name="advance_payment_ids" nolabel="1"
                           options="{'no_create': True, 'no_open': True}"
                           attrs="{'invisible':[('is_receipt_lines', '=', True)]}">
                        <tree editable="bottom" create="false" delete="0">
                            <field name="is_checked" string=" "
                                   class="oe_edit_only"/>
                            <field name="advance_id" invisible="1"
                                   force_save="1"/>
                            <field name="company_id"
                                   groups="base.group_multi_company"
                                   options="{'no_create': True}"
                                   optional="show"/>
                            <field name="move_name" string="Reference#"/>
                            <field name="partner_id" optional="show"
                                   readonly="1"
                                   string="Customer" force_save="1"/>
                            <field name="type" string="Type"/>
                            <field name="total_amount" sum="Total Debit"
                                   readonly="1"
                                   string="Total Amount" width="30px"
                                   force_save="1"/>
                            <field name="applied_amount" sum="Used Credit"
                                   string="Applied Amount" readonly="1"
                                   force_save="1"
                                   width="30px"/>
                            <field name="balance_amount"
                                   sum="Balance Advance" force_save="1"
                                   string="Balance Amount" readonly="1"
                                   width="30px"/>
                            <field name="apply_amount" sum="Apply Advance"
                                   string="Apply Amount" width="30px"/>
                        </tree>
                    </field>

                    <footer>
                        <button name="action_confirm_advance_payment"
                                string="Save" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default"
                                special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
    <record id="add_multi_bill_advance_wizard" model="ir.ui.view">
        <field name="name">bill.advance.payment.wizard</field>
        <field name="model">bill.advance.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="payment_id" invisible="1"/>
                        <field name="bill_payment_line_id" invisible="1"/>
                        <field name="is_advance_lines" invisible="1"/>
                    </group>
                    <div class="alert alert-danger " role="alert"
                         attrs="{'invisible':[('is_advance_lines','=',False)]}">
                        <span>
                            There is no active credits.
                        </span>
                    </div>
                    <field name="advance_payment_ids" nolabel="1"
                           options="{'no_create': True, 'no_open': True}"
                           attrs="{'invisible':[('is_advance_lines', '=', True)]}">
                        <tree editable="bottom" create="false" delete="0">
                            <field name="is_checked" string=" "
                                   class="oe_edit_only"/>
                            <field name="advance_id" invisible="1"
                                   force_save="1"/>
                            <field name="company_id"
                                   groups="base.group_multi_company"
                                   options="{'no_create': True}"
                                   optional="show"/>
                            <field name="move_name" string="Reference#"/>
                            <field name="partner_id" optional="show"
                                   readonly="1"
                                   string="Customer" force_save="1"/>
                            <field name="type" string="Type"/>
                            <field name="total_amount" sum="Total Debit"
                                   readonly="1"
                                   string="Total Amount" width="30px"
                                   force_save="1"/>
                            <field name="applied_amount" sum="Used Credit"
                                   string="Applied Amount" readonly="1"
                                   force_save="1"
                                   width="30px"/>
                            <field name="balance_amount"
                                   sum="Balance Advance" force_save="1"
                                   string="Balance Amount" readonly="1"
                                   width="30px"/>
                            <field name="apply_amount" sum="Apply Advance"
                                   string="Apply Amount" width="30px"/>
                        </tree>
                    </field>
                    <footer>
                        <button name="action_confirm_bill_advance_payment"
                                string="Save" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-default"
                                special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

