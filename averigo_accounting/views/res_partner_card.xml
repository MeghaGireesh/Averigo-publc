<odoo>
    <record id="view_partner_card_form" model="ir.ui.view">
        <field name="name">res.partner.card.form</field>
        <field name="model">res.partner.card</field>
        <field name="priority">15</field>
        <field name="arch" type="xml">
            <form string="Card account">
                <sheet>
                    <group>
                        <group>
                            <field name="card_number"/>
                            <field name="card_type" string="Type"/>
                            <field name="card_expiry" string="Card Expiry Date"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="card_name" string="Name on the Card"/>
                            <field name="partner_id" string="Card Holder" invisible="1"/>
                            <field name="bank_id"/>
                            <field name="is_vendor" invisible="1"/>
                            <field name="is_customer" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_partner_card_tree" model="ir.ui.view">
        <field name="name">res.partner.card.tree</field>
        <field name="model">res.partner.card</field>
        <field name="arch" type="xml">
            <tree string="Card Accounts">
                <field name="card_number"/>
                <field name="partner_id"/>
                <field name="company_id" invisible="1"/>
                <field name="card_name" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="view_partner_card_search" model="ir.ui.view">
        <field name="name">res.partner.card.search</field>
        <field name="model">res.partner.card</field>
        <field name="arch" type="xml">
            <search string="Card Accounts">
                <field name="card_name" filter_domain="['|', ('card_name','ilike',self), ('card_number','ilike',self)]"
                       string="Bank Name"/>
                <field name="company_id" invisible="context.get('company_hide', True)"/>
                <field name="partner_id"/>
            </search>
        </field>
    </record>

    <record id="action_res_partner_card" model="ir.actions.act_window">
        <field name="name">Card</field>
        <field name="res_model">res.partner.card</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Card
            </p>
        </field>
    </record>
</odoo>