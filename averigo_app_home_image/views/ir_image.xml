<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="ir_image_form" model="ir.ui.view">
            <field name="name">ir.image.form</field>
            <field name="model">ir.image</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form>
                    <sheet string="App Homescreen Image">
                        <div class="oe_title">
                            <field name="active" invisible="1"/>
                            <widget name="web_ribbon" text="Archived" bg_color="bg-danger"
                                    attrs="{'invisible': [('active', '=', True)]}"/>
                        </div>
                        <group string="Micro Market App Home Screen Image" col="12">
                            <group colspan="5">
                                <field name="operator_id" widget="many2many_tags" style="max-width: 245px;"/>
                                <field name="start_time" widget="float_time"/>
                                <field name="start_date"/>
                                <field name="micro_market_id" widget="many2many_tags" style="max-width: 245px;"/>
                            </group>
                            <group colspan="5">
                                <field name="location" widget="many2many_tags" style="max-width: 245px;"
                                       domain="[('is_customer', '=', True),('parent_id', '=', False),('type','=','contact')]"/>
                                <field name="end_time" widget="float_time"/>
                                <field name="end_date"/>
                                <field name="banner_text"/>
                            </group>
                            <group string="Image" colspan="2">
                                <field nolabel="1" name="image" widget="image" filename="name"
                                       style="max-width:150px;max-height:150px; width: 100%"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="ir_image_tree" model="ir.ui.view">
            <field name="name">ir.image.tree</field>
            <field name="model">ir.image</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="App Homescreen Image">
                    <field name="image" widget="image" height="60px" width="60px"/>
                    <field name="operator_id" widget="many2many_tags"/>
                    <field name="location" widget="many2many_tags"/>
                    <field name="micro_market_id" widget="many2many_tags"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                </tree>
            </field>
        </record>
        <record id="ir_action_view_image" model="ir.actions.act_window">
            <field name="name">Images</field>
            <field name="res_model">ir.image</field>
            <field name="view_mode">tree,form</field>
            <field name="target">current</field>
        </record>
        <menuitem name="Home Screen Images" id="menu_ir_action_view_image" sequence="2"
                  web_icon="averigo_app_home_image,static/description/icon.png"
                  action="averigo_app_home_image.ir_action_view_image"
                  groups="base_averigo.admin_user_home_screen_image_read"/>
    </data>

</odoo>
