<odoo>
    <data>


        <record id="note_wizard_case_view" model="ir.ui.view">
            <field name="name">Notes</field>
            <field name="model">case.management</field>
            <field name="arch" type="xml">

                <form>
                    <style>
                        @media (min-width: 992px){
                        .modal-lg, .modal-xl {
                        max-width: 1200px !important;
                        }}
                    </style>

                    <!--                    <sheet>-->
                    <field name="case_notes">
                        <tree editable="top" delete="false">
                            <field name="message" style="white-space: normal;word-break: break-word;" required="1"/>
                            <field name="created_on" readonly="1"/>
                            <field name="create_uid" string="Created By" readonly="1" widget="many2one_avatar_user"/>
                            <field name="origin_id" invisible="1"/>

                        </tree>
                    </field>
                    <footer>
                        <button string="Save Note" special="save" class="oe_highlight"/>
                        <button string="Discard" special="cancel" class="btn btn btn btn o_form_button_cancel btn-secondary"/>
                    </footer>
                    <!--                    </sheet>-->
                    <!--                    <footer>-->
                    <!--                        <button string="Discard" class="btn-danger"-->
                    <!--                                special="cancel"/>-->
                    <!--                    </footer>-->
                </form>
            </field>
        </record>
        <!--        Message view-->
        <record id="comment_wizard_case_view" model="ir.ui.view">
            <field name="name">comments</field>
            <field name="model">case.management</field>
            <field name="arch" type="xml">

                <form>
                    <style>
                        @media (min-width: 992px){
                        .modal-lg, .modal-xl {
                        max-width: 1200px !important;
                        }}
                    </style>

                    <!--                    <sheet>-->
                    <field name="message_ids">
                        <tree editable="bottom" delete="false">

                            <field name="body" string="Message" style="white-space: normal;word-break: break-word;"/>
                            <field name="create_date" readonly="1"/>
                            <field name="author_id" readonly="1"/>

                        </tree>
                    </field>
                    <!--                    </sheet>-->
                    <footer>
                        <button string="Discard" class="btn-danger"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <!--        Note-->
        <record id="activity_wizard_case_view" model="ir.ui.view">
            <field name="name">Activities</field>
            <field name="model">case.management</field>
            <field name="arch" type="xml">

                <form>
                    <style>
                        @media (min-width: 992px){
                        .modal-lg, .modal-xl {
                        max-width: 1200px !important;
                        }}
                    </style>
                    <!--                <sheet>-->
                    <field name="activity_ids" create="0">
                        <tree create="0" editable="top">
                            <!---->
                            <field name="note" string="Note" style="white-space: normal;word-break: break-word;"
                                   readonly="1"/>
                            <field name="res_model_id" ref="case.management" invisible="1"/>
                            <field name="activity_type_id" readonly="1"/>
                            <field name="create_date" string="Date" readonly="1"/>
                            <field name="date_deadline" string="Deadline" readonly="1"/>
                            <field name="user_id" string="Created By" readonly="1"/>
                            <field name="user_id" string="Assigned To" readonly="1"/>
                            <!---->
                        </tree>
                    </field>
                    <!--                </sheet>-->
                    <footer>
                        <button string="Discard" class="btn-danger"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="attachment_wizard_case_view" model="ir.ui.view">
            <field name="name">Attachments</field>
            <field name="model">case.management</field>
            <field name="arch" type="xml">

                <form>
                    <!--                <sheet>-->
                    <field name="attachment_ids" create="0">
                        <tree create="0" editable="bottom">

                            <field name="name" string="Name" readonly="1"/>
                            <field name="res_model" ref="case.management" invisible="1"/>
                            <field name="res_id" invisible="1"/>
                            <field name="type" invisible="1"/>
                            <field name="res_field" invisible="1"/>
                            <field name="write_uid" string="Created By"/>
                            <field name="create_date" string="Date" readonly="1"/>

                            <!--
     <field name="activity_type_id"/>-->
                            <!--                            <field name="create_date" string="Date"/>-->
                            <!--                            <field name="date_deadline" string="Deadline"/>-->
                            <!--                            <field name="user_id" string="Created By"/>-->
                            <!--                            <field name="user_id" string="Assigned To"/>-->
                            <!--                            &lt;!&ndash;&ndash;&gt;-->
                        </tree>
                    </field>
                    <!--                </sheet>-->
                    <footer>
                        <button string="Discard" class="btn-danger"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
