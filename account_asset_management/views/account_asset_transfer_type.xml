<odoo>
    <record id="view_asset_transfer_type_form" model="ir.ui.view">
        <field name="name">view.asset.transfer.type.form</field>
        <field name="model">asset.transfer.type</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title" name="h1_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence_code"/>
                        </group>
                        <group>
                            <field name="code"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_asset_transfer_type_tree" model="ir.ui.view">
        <field name="name">view.asset.transfer.type.tree</field>
        <field name="model">asset.transfer.type</field>
        <field name="arch" type="xml">
            <tree string="Equipment Transfer Type" editable="bottom">
                <field name="sequence_code"/>
                <field name="code"/>
                <field name="name"/>
                <field name="company_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_asset_transfer_type" model="ir.actions.act_window">
        <field name="name">Equipment Transfer Type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asset.transfer.type</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>